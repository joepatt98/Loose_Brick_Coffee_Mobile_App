                    </FlexLayout>
                </Frame>-->
            </FlexLayout>

        </ScrollView>
        <StackLayout BackgroundColor="Maroon">

            <Button Style="{StaticResource checkoutButton}"
                    Clicked="Checkout_Button_Clicked"/>
        </StackLayout>

    </StackLayout>
    
</ContentPage>