<?xml version="1.0" encoding="utf-8" ?>  
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="LooseBrick.NewUserPage">
    
    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Padding="30" Spacing="40" BackgroundColor="Maroon">  
            <BoxView HeightRequest="10" />

            <Frame BackgroundColor="#BF043055" HasShadow="False">
                
                <StackLayout Orientation="Vertical" Spacing="10">
                    
                    <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Email"   
                           PlaceholderColor="Maroon" HeightRequest="40"   
                           Keyboard="Email"  
                           TextColor="Maroon"/>

                    <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Password"   
                           PlaceholderColor="Maroon" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="Maroon"/>

                </StackLayout>

            </Frame>

            <Button Command="{Binding PostCreateCommand}" Text="Create this new Account" TextColor="Maroon"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="Wheat" />

        </StackLayout>

    </ContentPage.Content>

</ContentPage>  
