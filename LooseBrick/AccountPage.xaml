<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LooseBrick.AccountPage"
             Title="Manage Your LooseBrick Account">

    <StackLayout>
        <Frame BackgroundColor="Maroon" Padding="24" CornerRadius="0">
            <Label Text="Account" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Welcome, Loosebrick!" FontSize="Title" Padding="30,10,30,10" FontAttributes="Bold"/>
        <Label Text="Personal Information" FontSize="18" Padding="30,20,30,0" FontAttributes="Bold "/>
        <Label Text="Name: Loosebrick Coffee" FontSize="16" Padding="30,10,30,0"/>
        <Label Text="Username: loosebrickcoffeeco" FontSize="16" Padding="30,0,30,0"/>
        <Label Text="Birthday: October 19, 2020" FontSize="16" Padding="30,0,30,70"/>
        <Button Text="Change Password" FontSize="Subtitle" Padding="30,0,30,0"/>
        <Button Text="View Saved Payment Information" FontSize="Subtitle" Padding="30,0,30,0"/>
        <Button Text="Privacy" FontSize="Subtitle" Padding="30,0,30,0"/>
        <Button Text="Logout" FontSize="Subtitle" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>
